{
	"name": "subscribo/main",
	"description": "The Subscribo API Server project.",
	"keywords": ["subscribo"],
	"license": "proprietary",
	"type": "project",
	"require": {
		"laravel/framework": "~5.0",
        "subscribo/modifier": "@dev",
        "subscribo/modelbase": "@dev",
        "subscribo/config": "@dev"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1",
        "subscribo/dependencyresolver": "@dev",
        "subscribo/schemabuilder": "@dev",
        "subscribo/api0": "@dev",
        "subscribo/apichecker": "@dev",
        "barryvdh/laravel-ide-helper": "dev-master"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"App\\": "app/",
            "Model\\": "app/Models"
		}
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "dev"
}
