{
	"name": "subscribo/main",
	"description": "The Subscribo API Server project.",
	"keywords": ["subscribo"],
	"license": "proprietary",
    "repositories": [{"type": "composer", "url": "http://satis.localhost"}],
	"type": "project",
	"require": {
		"laravel/framework": "5.0.*",
		"laravel/framework": "~5.0.0",
        "subscribo/apiserver": "@dev",
        "subscribo/apiclient": "@dev",
        "symfony/yaml": "2.6@stable",
        "subscribo/modifier": "@dev",
        "subscribo/modelbase": "@dev",
        "subscribo/config": "@dev",
        "subscribo/auth": "@dev"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1",
        "subscribo/schemabuilder": "@dev",
        "subscribo/apichecker": "@dev",
        "subscribo/clientchecker": "@dev",
		"barryvdh/laravel-ide-helper": "~2.0@dev"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"App\\": "app/",
            "Subscribo\\App\\Model\\": "app/Models/",
            "Subscribo\\App\\Seeder\\": "database/seeds/"


		}
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "dev"
}
